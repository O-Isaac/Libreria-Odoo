      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "list,form",
          "res_model": model._name,
        }
      </field>
    </record>
-->

    <!-- Top menu item -->
    <menuitem name="library" id="library.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Gestion" id="library.menu_1" parent="library.menu_root"/>
    <!-- actions -->
    <menuitem name="Libros" id="library.menu_1_list" parent="library.menu_1"
              action="library.action_window"/>
    <menuitem name="Autores" id="library.menu_2_list" parent="library.menu_1"
              action="library.autor_action_window"/>
  </data>
</odoo>
